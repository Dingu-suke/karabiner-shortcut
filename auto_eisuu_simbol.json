{
    "title": "記号の入力を自動で半角にする",
    "rules": [
                {
                    "description": "記号時、高速で入力モードに切り替え、戻す",
                    "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "semicolon",
                        "modifiers": {
                            "mandatory":[],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {"key_code": "japanese_eisuu"},
                        {"key_code": "semicolon"},
                        {"key_code": "japanese_kana"}
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                "language": "ja"
                                }
                            ]
                        }
                    ]
                },
                {
                    "type": "basic",
                    "from": {
                        "key_code": "quote",
                        "modifiers": {
                            "mandatory":[],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {"key_code": "japanese_eisuu"},
                        {"key_code": "quote"},
                        {"key_code": "japanese_kana"}
                    ],
                    "conditions": [
                        {
                            "type": "input_source_if",
                            "input_sources": [
                                {
                                "language": "ja"
                                }
                            ]
                        }
                    ]
                },
                {
